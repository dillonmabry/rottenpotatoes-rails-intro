-#  This file is app/views/movies/index.html.haml 
-# current heroku url: http://lit-ridge-5039.herokuapp.com/
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class=>('hilite' if @sort_column == 'title')}= link_to 'Movie Title', 
        movies_path(:sort => 'title', :ratings =>params[:ratings]), :id=>'title_header'
      %th Rating
      %th{:class=>("hilite" if @sort_column == "release_date")}= link_to 'Release Date', 
      movies_path(:sort=>'release_date', :ratings =>params[:ratings]), :id=>"release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

= form_tag movies_path, :method => :get, :id=>'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = check_box_tag "ratings[]", rating, @selected_ratings.include?(rating), :checked => true
    = rating
  = submit_tag 'Refresh', :id => 'ratings_submit'

